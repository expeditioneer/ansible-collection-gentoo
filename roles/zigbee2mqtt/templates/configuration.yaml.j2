---

homeassistant: true

frontend:
  port: 8080
  host: 127.0.0.1
  url: https://zigbee2mqtt.home.arpa

permit_join: true

mqtt:
  base_topic: zigbee2mqtt
  server: mqtt://mqtt.home.arpa
  user: {{ zigbee2mqtt_mqtt_username }}
  password: '{{ zigbee2mqtt_mqtt_password }}'

serial:
  port: /dev/ttyAMA0
  baudrate: 115200
  rtscts: false

advanced:
  log_output:
    - console
